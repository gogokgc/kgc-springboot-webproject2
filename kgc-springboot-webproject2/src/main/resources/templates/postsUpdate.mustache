{{>layout/header}}

<div class="container">

	<form>
	
		<div class="form-group">
 			<label for="author"> 작성자 </label>
			<input type="text" class="form-control" id="author" value="{{post.author}}">
 		</div>

		<div class="form-group">
			<label for="title">Title</label> <input type="text"class="form-control" value="{{post.title}}" id="title">
		</div>

		<div class="form-group text-body">
			<label class="text-white" for="content">Content</label>
			<textarea class="form-control summernote" rows="5" id="content">{{post.content}}</textarea>
		</div>

	</form>

	<a href="/" class="btn btn-secondary">Cancel</a>
	<button id="btn-update" class="btn btn-primary">Save</button>

</div>

<script>
	$('.summernote').summernote({
		tabsize : 2,
		height : 200
	});
</script>

{{>layout/footer}}